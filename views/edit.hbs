<div class="container py-5">
  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      {{> message}}
    </div>
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">更新餐廳 Edit Restaurant Information <i class="fas fa-edit"></i></h5>
          <hr>
          <!-- Edit URL -->
          <form method="POST" action="/restaurants/{{restaurant._id}}?_method=PUT">
            <div class="form-group form-row">
              <label for="rest-name" class="col-md-4 col-form-label">
                餐廳名稱 *
              </label>
              <div class="col-md-8">
                <input type="text" placeholder="Pleace Enter Restaurant Name" name="name" class="form-control"
                  id="rest-name" value="{{restaurant.name}}" required>
                <div class="valid-feedback">Good Answer</div>
                <div class="invalid-feedback">Example invalid feedback text</div>
              </div>
            </div>
            <div class="form-group form-row">
              <label for="rest-name-en" class="col-md-4 col-form-label">
                餐廳英文名稱 *
              </label>
              <div class="col-md-8">
                <input type="text" placeholder="Pleace Enter Restaurant English Name" name="name_en"
                  class="form-control" id="rest-name-en" value="{{restaurant.name_en}}" required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="rest-category" class="col-md-4 col-form-label">
                類別 *
              </label>
              <div class="col-md-8">
                <input type="text" placeholder="Pleace Enter Restaurant Category" name="category" class="form-control"
                  id="rest-category" value="{{restaurant.category}}" required>
              </div>
            </div>


            <div class="form-group form-row">
              <label for="rest-image" class="col-md-4 col-form-label">
                影像連結 *
              </label>
              <div class="col-md-8">
                <input type="text" placeholder="Pleace Enter Restaurant Image Url" name="image" class="form-control"
                  id="rest-image" value="{{restaurant.image}}" required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="rest-location" class="col-md-4 col-form-label">
                地址 *
              </label>
              <div class="col-md-8">
                <input type="text" placeholder="Pleace Enter Restaurant Address" name="location" class="form-control"
                  id="rest-location" value="{{restaurant.location}}" required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="rest-phone" class="col-md-4 col-form-label">
                電話 *
              </label>
              <div class="col-md-8">
                <input type="text" placeholder="Pleace Enter Restaurant Phone Number" name="phone" class="form-control"
                  id="rest-phone" value="{{restaurant.phone}}" required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="rest-google-map" class="col-md-4 col-form-label">
                地圖連結 *
              </label>
              <div class="col-md-8">
                <input type="text" placeholder="Pleace Enter Restaurant Google Map Url" name="google_map"
                  class="form-control" id="rest-google-map" value="{{restaurant.google_map}}" required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="rest-rating" class="col-md-4 col-form-label">
                評分 *
              </label>
              <div class="col-md-8">
                <input type="number" placeholder="Pleace Enter Restaurant Rating (0.0 ~ 5.0)" name="rating"
                  class="form-control" id="rest-rating" min="0" max="5" step="0.1" value="{{restaurant.rating}}"
                  required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="rest-description" class="col-md-4 col-form-label">
                餐廳簡述 *
              </label>
              <div class="col-md-8">
                <textarea class="form-control" placeholder="Pleace Enter Restaurant Briefly Description"
                  name="description" id="rest-description" rows="3" required>{{restaurant.description}}</textarea>
                <!-- <input type="text" placeholder="Pleace Enter Restaurant Briefly Description"
                    name="rest-description" class="form-control" id="rest-description"
                    value="{{options.restDescription}}"> -->
              </div>
            </div>

            <!-- Add Succeed display -->
            {{#if createSucceed}}
            <div class="alert alert-info" role="alert">
              <span class="mr-2">Update Restaurant: </span> <code>Succeed!</code>
            </div>
            {{/if}}
            <div class="d-flex flex-row-reverse">
              <a href="/"><button class="btn btn btn-outline-primary" type="button">Back to Home Page</button></a>
              <button class="btn btn-success mr-3" type="submit">Update</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>