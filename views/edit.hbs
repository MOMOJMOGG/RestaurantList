            <div class="form-group form-row">
              <label for="rest-category" class="col-md-4 col-form-label">
                類別 *
              </label>
              <div class="col-md-8">
                <input type="text" placeholder="Pleace Enter Restaurant Category" name="restCategory"
                  class="form-control" id="rest-category" value="{{restaurant.category}}" required>
              </div>
            </div>


            <div class="form-group form-row">
              <label for="rest-image" class="col-md-4 col-form-label">
                影像連結 *
              </label>
              <div class="col-md-8">
                <input type="text" placeholder="Pleace Enter Restaurant Image Url" name="restImage" class="form-control"
                  id="rest-image" value="{{restaurant.image}}" required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="rest-location" class="col-md-4 col-form-label">
                地址 *
              </label>
              <div class="col-md-8">
                <input type="text" placeholder="Pleace Enter Restaurant Address" name="restLocation"
                  class="form-control" id="rest-location" value="{{restaurant.location}}" required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="rest-phone" class="col-md-4 col-form-label">
                電話 *
              </label>
              <div class="col-md-8">
                <input type="text" placeholder="Pleace Enter Restaurant Phone Number" name="restPhone"
                  class="form-control" id="rest-phone" value="{{restaurant.phone}}" required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="rest-google-map" class="col-md-4 col-form-label">
                地圖連結 *
              </label>
              <div class="col-md-8">
                <input type="text" placeholder="Pleace Enter Restaurant Google Map Url" name="restGoogleMap"
                  class="form-control" id="rest-google-map" value="{{restaurant.google_map}}" required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="rest-rating" class="col-md-4 col-form-label">
                評分 *
              </label>
              <div class="col-md-8">
                <input type="number" placeholder="Pleace Enter Restaurant Rating (0.0 ~ 5.0)" name="restRating"
                  class="form-control" id="rest-rating" min="0" max="5" step="0.1" value="{{restaurant.rating}}"
                  required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="rest-description" class="col-md-4 col-form-label">
                餐廳簡述 *
              </label>
              <div class="col-md-8">
                <textarea class="form-control" placeholder="Pleace Enter Restaurant Briefly Description"
                  name="restDescription" id="rest-description" rows="3" required>{{restaurant.description}}</textarea>
                <!-- <input type="text" placeholder="Pleace Enter Restaurant Briefly Description"
                    name="rest-description" class="form-control" id="rest-description"
                    value="{{options.restDescription}}"> -->
              </div>
            </div>

            <!-- Add Succeed display -->
            {{#if createSucceed}}
            <div class="alert alert-info" role="alert">
              <span class="mr-2">Update Restaurant: </span> <code>Succeed!</code>
            </div>
            {{/if}}
            <div class="d-flex flex-row-reverse">
              <a href="/"><button class="btn btn btn-outline-primary" type="button">Back to Home Page</button></a>
              <button class="btn btn-success mr-3" type="submit">Update</button>
            </div>
          </form>
