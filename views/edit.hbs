              <label for="rest-name" class="col-md-4 col-form-label">
                餐廳名稱 *
              </label>
              <div class="col-md-8">
                <input type="text" placeholder="Pleace Enter Restaurant Name" name="restName" class="form-control"
                  id="rest-name" value="{{restaurant.name}}" required>
                <div class="valid-feedback">Good Answer</div>
                <div class="invalid-feedback">Example invalid feedback text</div>
              </div>
            </div>
            <div class="form-group form-row">
              <label for="rest-name-en" class="col-md-4 col-form-label">
                餐廳英文名稱 *
              </label>
              <div class="col-md-8">
                <input type="text" placeholder="Pleace Enter Restaurant English Name" name="restNameEn"
                  class="form-control" id="rest-name-en" value="{{restaurant.name_en}}" required>
              </div>
            </div>

