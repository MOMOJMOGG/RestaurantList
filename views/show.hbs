<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <span class="operation-badge d-flex justify-content-between" style="height: 40px;width:200px;">
        <!-- edit icon -->
        <label class="badge badge-info d-inline-flex align-items-center justify-content-start mt-auto mb-auto"
          style="height: 40px;">
          <a href="/restaurants/{{restaurant._id}}/edit" style="text-decoration: none;">
            <span class="font-weight-normal text-centers pr-2 pl-2"
              style="font-size: 22px;color:white;line-height: 40px;">Edit
              <i class="fas fa-edit"></i>
            </span>
          </a>
        </label>
        <!-- delete icon -->
        <form action="/restaurants/{{restaurant._id}}/delete" method="POST" class="d-inline">
          <button class="btn btn-dark btn-sm pt-0 pb-0" style="font-size: 22px;height:40px;line-height: 40px;"
            type="submit">Del
            <i class="fas fa-trash-alt"></i></button>
        </form>
      </span>



      <p class="mb-1  mt-5">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>