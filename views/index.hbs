<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-deck">
        {{#each restaurants}}
        <div class="d-print-inline-block col-4">
          <div class="card mb-3 text-secondary ">
            <a href="/restaurants/{{this._id}}">
              <img class="card-img-top" src="{{this.image}}" alt="餐廳影像"></a>
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
              <div class="d-flex justify-content-between">
                <span class="badge badge-pill badge-danger font-weight-normal" style="font-size: 14px;">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
                <a href="/new/edit"><span class="badge badge-info font-weight-normal" style="font-size: 14px;">Edit <i
                      class="fas fa-edit"></i></span></a>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
        <div class="d-print-inline-block col-4">
          <div class="card mb-3" id="empty-slogan">
            <div class="slogan">
              <h1>Comming Soon!</h1>
            </div>
            <div class="card-body">
              <div class="create-btn">
                <a href="/new">
                  <i class="fas fa-plus-circle fa-3x"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>